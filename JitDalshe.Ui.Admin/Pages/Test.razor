@page "/test"

@code {
    private string _selectedImageId;

    private List<(string Id, string Src)> images = new()
    {
        ("img1", "https://sun9-75.userapi.com/impg/kFUchy2PXPldTN7-5s13WHRBNf21J4pAFW3GBQ/0Th53hNJJbo.jpg?size=1050x1050&quality=95&sign=0e6eb910ba478419c8a10c2868d21225&type=album"),
        ("img2", "https://sun9-75.userapi.com/impg/kFUchy2PXPldTN7-5s13WHRBNf21J4pAFW3GBQ/0Th53hNJJbo.jpg?size=1050x1050&quality=95&sign=0e6eb910ba478419c8a10c2868d21225&type=album"),
        ("img3", "https://sun9-75.userapi.com/impg/kFUchy2PXPldTN7-5s13WHRBNf21J4pAFW3GBQ/0Th53hNJJbo.jpg?size=1050x1050&quality=95&sign=0e6eb910ba478419c8a10c2868d21225&type=album"),
    };
}

<div class="d-flex gap-3">
    <InputRadioGroup @bind-Value="_selectedImageId">
        @foreach (var img in images)
        {
            <label class="image-radio @(_selectedImageId == img.Id ? "selected" : string.Empty)">
                <InputRadio Value="@img.Id"/>
                <img src="@img.Src" class="img-thumbnail" alt=""/>
            </label>
        }
    </InputRadioGroup>
</div>

<style>
.image-radio input[type="radio"] {
    display: none;
}

.image-radio {
    cursor: pointer;
    display: inline-block;
    border: 2px solid transparent;
    border-radius: 8px;
    transition: border-color 0.3s ease;
}

.image-radio.selected {
    border-color: #0d6efd;
    box-shadow: 0 0 15px rgba(13, 110, 253, 0.5);
}
</style>
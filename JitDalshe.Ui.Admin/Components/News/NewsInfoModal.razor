@using JitDalshe.Ui.Admin.Models

<div id="@Id"
     class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal_@News.Id">@News.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="@News.Photos.Single(x => x.IsPrimary).Uri"
                     class="mb-4 img-primary rounded"
                     alt=""/>
                @((MarkupString)News.TextWithoutTitle.Replace("\n", "<br/>"))
            </div>
            <div class="modal-footer">
                Опубликовано @News.PublishDate.ToString("dd-MM-yyyy")
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter] public required string Id { get; init; } 
    [Parameter] public required News News { get; init; }

}
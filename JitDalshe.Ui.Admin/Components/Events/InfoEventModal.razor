@using JitDalshe.Ui.Admin.Models
@using JitDalshe.Ui.Admin.Components.Shared.Modals

<Modal Id="@Id"
       Title="@ModalTitle"
       Footer="Modal.FooterType.Text"
       FooterText="@FooterText"
       FooterContentPosition="Modal.FooterPositioning.Start">
    <img src="@Event.ImageUrl"
         class="mb-4 img-primary rounded"
         alt=""/>
    @((MarkupString)(Event.Description?.Replace("\n", "<br/>") ?? string.Empty))
</Modal>

@code {
    private string FooterText => $"Событие запланировано на {Event.Date.ToString("dd-MM-yyyy")}";
    private string ModalTitle => $"{Event.Title} ({Event.DisplayingStatus})";

    [Parameter] public required string Id { get; init; }
    [Parameter] public required Event Event { get; init; }
}
@using JitDalshe.Ui.Admin.Models

<div id="@Id"
     class="modal fade"
     tabindex="-1"
     role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Event.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="@Event.ImageUrl"
                     class="mb-4 img-primary rounded"
                     alt=""/>
                @((MarkupString)(Event.Description?.Replace("\n", "<br/>") ?? string.Empty))
            </div>
            <div class="modal-footer">
                Событие запланировано на @Event.Date.ToString("dd-MM-yyyy")
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public required string Id { get; init; }
    [Parameter] public required Event Event { get; init; }
}